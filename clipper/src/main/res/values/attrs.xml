<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClipImage">
        <attr name="ci_horizontal_padding" format="dimension" />
        <attr name="ci_vertical_padding" format="dimension" />
        <attr name="ci_corner_radius" format="dimension" />
        <attr name="ci_clip_radius" format="dimension" />
        <attr name="ci_clip_type">
            <flag name="circle" value="1" />
            <flag name="pin" value="2" />
        </attr>
        <attr name="ci_clip_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
        </attr>
    </declare-styleable>
</resources>